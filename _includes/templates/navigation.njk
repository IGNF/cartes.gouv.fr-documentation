<nav class="fr-nav"
     id="navigation-494"
     role="navigation"
     aria-label="{{ "main_menu" | i18n }}">
    {% set navigationLinks = collections.mainNavigation | filterCollectionLang | eleventyNavigation %}
    <ul class="fr-nav__list">
        {% for link in navigationLinks %}
            <li class="fr-nav__item">
                {% if not link.children | length %}
                    {% set linkUrl = link.url | locale_url(lang) or link.externalUrl %}
                    {% set isCurrentSection = false %}
                    {% if linkUrl == page.url %}
                        {% set isCurrentSection = true %}
                    {% elif link.url and page.url.startsWith(link.url) %}
                        {% set isCurrentSection = true %}
                    {% endif %}
                    <a
                        class="fr-nav__link"
                        href="{{ linkUrl }}"
                        {% if link.externalUrl %}target="_blank" rel="noopener"{% endif %}
                        title="{{ link.tooltip }}"
                        {% if isCurrentSection %}aria-current="page"{% endif %}
                    >
                        {{ link.title }}
                    </a>
                {% else %}
                    <button class="fr-nav__btn"
                            aria-expanded="false"
                            aria-controls="menu-{{ loop.index }}">{{ link.title }}</button>
                    <div class="fr-collapse fr-menu" id="menu-{{ loop.index }}">
                        <ul class="fr-menu__list">
                            {% for sublink in link.children %}
                                <li>
                                    {% set sublinkUrl = sublink.url | locale_url(lang) or sublink.externalUrl %}
                                    <a class="fr-nav__link"
                                       href="{{ sublinkUrl }}"
                                       {% if sublink.externalUrl %}target="_blank" rel="noopener"{% endif %}
                                       title="{{ link.tooltip }}"
                                       {% if sublinkUrl == page.url %}aria-current="page"{% endif %}
                                    >
                                        {{ sublink.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>
