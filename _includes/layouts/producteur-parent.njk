---
layout: layouts/base.njk
---

{% from "components/component.njk" import component with context %}
<div class="fr-container" data-pagefind-ignore>
  <div class="fr-grid-row">
    <div class="fr-col-12 fr-col-md-4">
      {% set navLinks = collections.producteurNavigation | filterCollectionLang | eleventyNavigation %}
      {% set sidemenuTitle = "Guides producteur" %}
      {% set sidemenuLink = "/fr/guides/producteur/" %}
      {% include "templates/sidemenu.njk" %}
    </div>
    <div id="contenu" class="fr-col-12 fr-col-md-8 fr-py-12v">
      <div class="fr-grid-row">
        <div class="fr-col-12 fr-col-md-9">
          {% if showBreadcrumb %}
            {% include "components/breadcrumb.njk" %}
          {% endif %}
          <h1>{{ title }}</h1>
          {% include "components/taggroup-disabled.njk" %}
          {% include "components/published_on.njk" %}
          {% if description %}
            <p class="fr-text--lead">{{ description }}</p>
          {% endif %}
        </div>
      </div>
      {{ content | safe }}

      {% if eleventyNavigation and eleventyNavigation.key %}
        {% set currentKey = eleventyNavigation.key %}
        {% set children = [] %}
        {% for entry in collections.producteurNavigation %}
          {% if entry.data.eleventyNavigation.parent == currentKey %}
            {% set _ = children.push(entry) %}
          {% endif %}
        {% endfor %}

        {% set children = children | sort(attribute="data.eleventyNavigation.order") %}

        {% if children.length %}
          <div class="fr-grid-row fr-grid-row--gutters fr-mt-6w">
            {% for child in children %}
              <div class="fr-col-12 fr-col-md-6 fr-col-lg-4">
                {% set tile = {
                  title: child.data.title,
                  url: child.url,
                  description: child.data.description,
                  pictogram: child.data.pictogram,
                  externalUrl: child.data.externalUrl
                } %}
                {% include "components/tile.njk" %}
              </div>
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}

      {% include "components/page-switcher.njk" %}
    </div>
  </div>
</div>
