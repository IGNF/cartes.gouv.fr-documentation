---
layout: layouts/base.njk
sidemenu: false
---

{% from "components/component.njk" import component with context %}
<div class="fr-mb-6w">
    <div class="fr-py-3w">
        <div class="fr-container">
            <div class="fr-grid-row">
                <div class="fr-col-10">
                    {% if showBreadcrumb %}
                        {% include "components/breadcrumb.njk" %}
                    {% endif %}
                    <h1>{{ title }}</h1>
                    {% include "components/taggroup-disabled.njk" %}
                    <p class="fr-text--xs fr-mt-6v">
                        {{ "published_on" | i18n }}
                        <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
                    </p>

                    {% if description %}<p class="fr-text--lead">{{ description }}</p>{% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="fr-container" data-pagefind-body>
        {% include "components/pagefind_filters.njk" %}
        <div class="fr-grid-row">
            {% if sidemenu %}
                {% set sideMenuItems = content | getSideMenuItems %}
                <div class="fr-col-12 fr-col-md-4">
                    {{ component("sidemenu", {
                                        items: sideMenuItems
                                        }) }}
                </div>
            {% endif %}
            <div class="fr-col-12 {% if sidemenu %}fr-col-md-8 fr-py-12v{% endif %}">{{ content | safe }}</div>
        </div>
    </div>
</div>
