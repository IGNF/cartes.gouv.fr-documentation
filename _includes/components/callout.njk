{% if not callout %}
    {% set callout = params %}
{% endif %}
<div class="fr-callout">
    <p class="fr-callout__title">{{ callout.title }}</p>
    <p class="fr-callout__text">{{ callout.description }}</p>
    {% if callout.link %}<a class="fr-btn" href="{{ callout.link.url }}">{{ callout.link.title }}</a>{% endif %}
</div>
