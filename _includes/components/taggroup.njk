<ul class="fr-tags-group" data-pagefind-ignore>
    {% for tag in tags | filterTagList %}
        {% set tagUrl %}
            {{ (tagsUrl or "/blog/tags/") | locale_url }}{{ tag | slugify }}/
        {% endset %}
        <li>
            <a href="{{ tagUrl }}" class="fr-tag" data-pagefind-filter="tag">{{ tag }}</a>
        </li>
    {% endfor %}
</ul>
