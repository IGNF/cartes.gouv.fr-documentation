---
title: Résultats de la recherche
layout: layouts/base.njk
eleventyExcludeFromCollections: true
---

<div class="fr-container fr-my-6w" data-pagefind-ignore>
    <div class="fr-grid-row">
        <div class="fr-col-12">
            <div class="fr-mb-6w">
                <h1>
                    {{ title }} «&nbsp;<span id="search-term"></span>&nbsp;»
                </h1>
                <p class="fr-text--lg">
                    <span id="result-count">0</span> {{ "results" | i18n }}
                </p>
                <div id="search-filter-tags"></div>
                <div class="fr-grid-row fr-grid-row--gutters" id="search-results"></div>
            </div>
        </div>
        <nav id="pagination-container" role="navigation" class="fr-pagination fr-col-12 fr-col-lg-8" aria-label="Pagination"></nav>
    </div>
</div>
{% js "body" %}
<script>const PAGEFIND_URL = "{{ "/_pagefind/pagefind.js" | htmlBaseUrl }}";</script>
<script type="text/javascript" src="/js/search-results.js"></script>
{% endjs %}
